<h1>Lista de Vagas</h1>

<table>
  <thead>
  <tr>
    <th>Título</th>
    <th>Descrição</th>
    <th>Salário</th>
    <th>Empregador</th>
    <th>Ações</th>
  </tr>
  </thead>
  <tbody>
  <% @vagas.each do |vaga| %>
    <tr>
      <td><%= vaga.titulo %></td>
      <td><%= vaga.descricao %></td>
      <td><%= vaga.salario %></td>
      <td><%= vaga.empregador.nome %></td>
      <td>
        <%= link_to 'Excluir', vaga, method: :delete, data: { confirm: 'Tem certeza que deseja excluir esta vaga?' } %>
      </td>
      <td>
        <%= link_to 'Editar', edit_vaga_path(vaga) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Voltar para a lista de empregadores', empregadores_path %>
