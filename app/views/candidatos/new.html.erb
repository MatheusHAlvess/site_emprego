<h1>Cadastro de Candidato</h1>

<%= form_for @candidato do |f| %>
  <%= render 'shared/errors', object:@candidato %>

  <%= f.label :nome %>
  <%= f.text_field :nome %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :cpf %>
  <%= f.text_field :cpf %>

  <%= f.label :data %>
  <%= f.date_field :data %>

  <%= f.label :telefone %>>
  <%= f.text_field :telefone %>

  <%= f.submit 'Salvar Candidato' %>>

<% end %>